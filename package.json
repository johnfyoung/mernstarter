{
  "name": "mernstarter",
  "displayName": "MERN Starter App Refactor",
  "version": "1.0.0",
  "description": "A MERN starter kit",
  "main": "server.js",
  "private": true,
  "jest": {
    "projects": [
      "client/jest.config.js",
      "server/jest.config.js"
    ]
  },
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "npm run server",
    "start:dev": "concurrently \"nodemon --ignore 'client/*' --exec npm run server\" \"npm run client\"",
    "server": "babel-node server.js",
    "client": "AUTHOR=$(node -p \"require('./package.json').author\") && APP_NAME=$(node -p \"require('./package.json').displayName\") && cd client && env REACT_APP_NAME=\"$APP_NAME\" REACT_APP_AUTHOR=\"$AUTHOR\" npm run start",
    "install": "cd client && npm install",
    "build": "AUTHOR=$(node -p \"require('./package.json').author\") && APP_NAME=$(node -p \"require('./package.json').displayName\") && cd client && env REACT_APP_NAME=\"$APP_NAME\" REACT_APP_AUTHOR=\"$AUTHOR\" npm run build",
    "heroku-postbuild": "npm run build",
    "test": "jest",
    "getName": "node -p \"require('./package.json').name\"",
    "getDisplayName": "node -p \"require('./package.json').displayName\""
  },
  "author": "John Young",
  "license": "ISC",
  "repository": "github:johnfyoung/mernstarter",
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.9.1",
    "@reach/router": "^1.3.4",
    "axios": "^0.19.2",
    "babel-loader": "^8.1.0",
    "bcrypt": "^3.0.6",
    "cookie-parser": "^1.4.4",
    "dotenv": "^8.1.0",
    "eslint": "^6.6.0",
    "eslint-plugin-babel": "^5.3.0",
    "express": "^4.17.1",
    "express-request-id": "^1.4.1",
    "express-useragent": "^1.0.13",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "mongoose": "^5.7.5",
    "morgan": "^1.9.1",
    "nodemon": "^1.19.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "uuid": "^3.3.3",
    "validator": "^11.1.0",
    "webpack": "4.42.0",
    "webpack-cli": "^3.3.12",
    "winston": "^3.2.1",
    "winston-mongodb": "^5.0.0"
  },
  "devDependencies": {
    "babel-jest": "^24.9.0",
    "concurrently": "^4.1.1",
    "eslint-plugin-prettier": "^3.1.0",
    "jest": "^24.9.0",
    "prettier": "^1.18.2"
  }
}
